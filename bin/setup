#!/usr/bin/env bash

# Exit immediately on any failure
set -e
set -o pipefail

# Path to the ./bin folder
BINPATH=`dirname "$0"`

# Check prerequisites
$BINPATH/check

echo "-----------------------------------------------"
echo "Welcome aboard! Setting up the Chain React app."
echo "-----------------------------------------------"
echo ""

echo "ðŸ”¨ Running yarn..."
yarn

echo "ðŸ”¨ Installing pods..."
cd ios && pod install && cd ..

